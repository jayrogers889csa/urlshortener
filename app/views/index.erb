<div class="container">
   <% if @url and @url.errors.any? %>

      <ul>
      <% @url.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  <% elsif @url %>
    <h2>Your shortened url: http://oursite.<%= @url.shortened_url %></h2>
    <p>Enter another URL to shorten!
  <% else %>
    <h1>Welcome to URL Shortener!</h1>
    <p>Please give a URL to shorten:</p>
  <% end %>

  <form method="POST" action="/urls">
    <input type="text" name="post[url]">
    <input type="submit">
  </form>

  <h3>URLs You Have Shortened:</h3>
  <% Url.all.each do |url| %>
    <a href=<%="/#{url.shortened_url}"%>><%= url.listify %></a>
    <br>
  <% end %>

</div>
